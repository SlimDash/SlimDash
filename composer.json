{  
    "name": "slimdash/SlimDash",
    "description": "Simple dashboard written with Slim Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "url": "https://github.com/slimdash/php-helpers.git",
            "type": "git"
        }
    ],

    "require": {
        "php" : "^5.5 || ^7.0",
        "monolog/monolog": "^1.21",
        "phpmailer/phpmailer": "^5.2",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.1",
        "symfony/http-foundation": "^3.1",
        "symfony/translation": "^3.1",
        "symfony/twig-bridge": "^3.1",
        "slimdash/php-helpers": "dev-master",
        "tuupola/slim-jwt-auth": "^2.3",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "mockery/mockery": "^0.9.5",
        "phpunit/dbunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "AppMain\\": "modules/AppMain/src/",
            "SlimDash\\Core\\": "src/core/"
        }
    }
}
