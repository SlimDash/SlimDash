{  
    "name": "slimdash/SlimDash",
    "description": "Simple dashboard written with Slim Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "url": "https://github.com/slimdash/core.git",
            "type": "git"
        }
    ],

    "require": {
        "php" : "^5.5 || ^7.0",
        "slim/twig-view": "^2.2",
        "symfony/http-foundation": "^3.2",
        "symfony/translation": "^3.2",
        "symfony/twig-bridge": "^3.2",
        "slimdash/core": "dev-master",
        "vlucas/phpdotenv": "^2.4",
        "monolog/monolog": "^1.22",
        "adrorocker/php-firebase": "^0.2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "mockery/mockery": "^0.9.5",
        "phpunit/dbunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "AppMain\\": "src/"
        }
    }
}
